<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" >
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>dbServlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>dbServlets.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sendemail</servlet-name>
        <servlet-class>SecurityClasses.SendEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>changeemail</servlet-name>
        <servlet-class>dbServlets.ChangeEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>postblog</servlet-name>
        <servlet-class>dbServlets.PostBlog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>changepass</servlet-name>
        <servlet-class>dbServlets.ChangePass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>forgottenpass</servlet-name>
        <servlet-class>dbServlets.ForgottenPass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usercheck</servlet-name>
        <servlet-class>dbServlets.UserCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>dbServlets.Logout</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verified</servlet-name>
        <url-pattern>/verified</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>email</servlet-name>
        <url-pattern>/email</url-pattern>
    </servlet-mapping>
 
</web-app>
